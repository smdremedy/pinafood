<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?android:selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pin_item_image_dhiv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
             />

        <com.byoutline.secretsauce.views.CustomFontTextView

            android:id="@+id/pin_item_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_red_stroke"
            android:paddingBottom="@dimen/pin_item_padding_main"
            android:paddingLeft="@dimen/pin_item_padding_left"
            android:paddingRight="@dimen/pin_item_padding_main"
            android:paddingTop="@dimen/pin_item_padding_main"
            android:textColor="#000"
            android:textSize="16sp"
            app:customFont="OpenSansLight.ttf" />

    </LinearLayout>
</android.support.v7.widget.CardView>

