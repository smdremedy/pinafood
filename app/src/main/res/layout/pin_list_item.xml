<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/item_ll"
              android:background="@drawable/rounded_red_stroke"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.byoutline.pinafood.CustomFontTextView
        android:textSize="@dimen/add_pin_list_item_name_text_size"
        android:id="@+id/list_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="@dimen/add_pin_list_item_name_padding"
        android:textColor="@color/grey"/>

</LinearLayout>